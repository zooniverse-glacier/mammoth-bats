.tooltip-container
  z-index: 1

.tooltip
  .tether-element-attached-right &,
  .tether-element-attached-left &
  .tether-pinned-right &
  .tether-pinned-left &
    max-width: 25vw

  .arrow
    background: MAIN_HIGHLIGHT
    height: 0.7em
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%) rotate(45deg)
    width: 0.7em
    z-index: -1

    .tether-element-attached-top &
      top: 0

    .tether-element-attached-right &
      left: 100%

    .tether-element-attached-bottom &
      top: 100%

    .tether-element-attached-left &
      left: 0

  .content
    background: BACKGROUND
    border: 3px solid MAIN_HIGHLIGHT
    border-radius: 0.3em
    box-shadow: 0 3px 2px -2px rgba(black, 0.3)
    color: FOREGROUND
    font-size: 0.8em
    max-height: 80vh
    overflow: auto
    padding: 0.5em 1vw

  .actions
    border-top: 1px solid rgba(gray, 0.3)
    margin-top: 1em
    padding-top: 0.5em
    text-align center
