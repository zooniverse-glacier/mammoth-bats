.slide-tutorial
  position: absolute
  width: 100%
  z-index: 98

  &.show
    animation: fadeIn .25s forwards

  &.fade-out
    animation: fadeOut .25s forwards

  .slide-tutorial-overlay
    background: rgba(0, 0, 0, 0.7)
    bottom: 0
    cursor: pointer //necessary for onClick to work in iOS Safari!!
    left: 0
    position: fixed
    right: 0
    top: 0
    z-index: 99

  .slide-tutorial-slide
    display: none
    &.active
      display: block

  .slide-tutorial-container
    background: #fff
    border-radius: 8px
    margin: 50px auto
    max-width: 400px
    overflow: auto
    position: relative
    width: 40%
    z-index: 100

    @media screen and (max-width: 820px)
      width: 60%

    @media screen and (max-width: 520px)
      margin: 0px auto 110px
      width: 90%

    .slide-tutorial-slide
      .slide-tutorial-slide-top img
        width: 100%
      .slide-tutorial-slide-bottom
        height: 100%
        min-height: 210px

        p, h1
          color: $medium-blue
          line-height: 20px

        h1
          font-size: 24px
          margin: 25px 20px
        p
          font-size: 14px
          margin: 0 20px 25px

    .slide-tutorial-close-button
      @extends $reset-button
      cursor: pointer
      position: absolute
      right: 0.5em
      top: 0.5em

      img
        width: 1em
        height: 1em

    .slide-tutorial-dots
      margin: 10px 0
      overflow: auto
      text-align: center
      width: 100%

      .slide-tutorial-dot
        background: #cbcbcb
        border-radius: 50%
        display: inline-block
        float: none
        height: 10px
        margin: 5px
        width: 10px
        &.active
          background: $lime-green

    .slide-tutorial-button-container
      text-align: center
      width: 100%

      .slide-tutorial-next-button
        @extends $reset-button
        background-color: $lime-green
        border-radius: 4px
        color: white
        font-size: 16px
        line-height: 50px
        margin: 10px
        width: 200px

        &:hover
          background-color: lighten($lime-green, 20%)

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}
