.main-header
  align-items: center
  background-color: transparent
  box-sizing: border-box
  display: flex
  justify-content: space-between
  padding: 1em 3vw
  position: fixed
  width: 100%

  .main-header-logo-link
    flex: 0 0 25px

    .zooniverse-logo
      color: white

  .main-header-nav
    flex: 1 1 auto

    .main-header-link
      background-color: transparent
      color: white
      padding: 0.5em 1em
      text-decoration: none

      &.active
        border: solid 2px white
        border-radius: 15px

      &:hover
        background-color: lighten(#000000, 20%)

      &:visited
        color: white

  .account-bar
    color: white