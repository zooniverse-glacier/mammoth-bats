.main-footer
  .main-footer-zooniverse-info
    align-items: center
    background-color: $dark-blue
    color: $medium-blue
    display: flex
    flex-direction: column
    justify-content: center
    padding: 3em 3vw

    .zooniverse-logo
      font-size: 4em

    .markdown
      p
        font-size: 1.2em
        font-weight: 400
        max-width: 41em
        text-align: center

    .footer-link-button
      @extends $reset-button
      border: solid 2px $medium-blue
      border-radius: 4px
      color: inherit
      font-size: 0.9em
      padding: 1em 0
      text-align: center
      width: 215px

      &:hover
        background-color: lighten($dark-blue, 10%)

  .main-footer-projects-lists
    background-color: #28323e
    color: #00b5be
    display: flex
    justify-content: center
    min-height: 175px
    padding: 1em 3vw

    @media screen and (max-width: 900px)
      flex-wrap: wrap
      justify-content: flex-start

    .project-list-container
      padding: 0.5em 2em
      white-space: nowrap

      h5
        margin: 0

      .project-list
        list-style: none
        font-size: 0.8em
        margin: 0
        padding: 0

        li > a
          @extends $reset-link

          &:hover
            color: lighten(#00b5be, 10%)

  .main-footer-social-media
    background-color: #00181a
    box-sizing: border-box
    color: #808080
    display: flex
    font-size: 0.8em
    justify-content: space-between
    max-width: 2000px
    padding: 0.25em 3vw
    width: 100%

    .markdown
      align-items: center
      display: flex

      p
        margin: 0.5em 0.5em 0.5em 0

    .social-media-links
      line-height: 50px
      min-width: 150px

      a
        margin-left: 1.5em

      span, i
        vertical-align: middle

    a
      @extends $reset-link

      &:hover
        color: lighten(#808080, 30%)