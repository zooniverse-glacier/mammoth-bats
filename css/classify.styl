.classify-page
  height: 100%
  padding: 10em 3vw

  .loading-indicator-container
    align-items: center
    display: flex
    justify-content: center
    height: 100%
    min-height: 581px

    .loading-indicator-icon
      color: white
      position: relative
      z-index: 1

  .classification
    align-items: stretch
    display: flex
    flex-wrap: wrap
    justify-content: center
    margin: 0 auto
    max-width: 1200px

    .subject
      background-color: black
      border-bottom-left-radius: 6px
      border-top-left-radius: 6px
      display: inline-flex
      flex: 0 1 66%
      justify-content: center
      max-width: 800px

      .video-container
        display: inline-flex
        flex-direction: column
        justify-content: center
        position: relative
        width: 100%

        video
          background-color: black

        .playback-rate-controls
          bottom: -2em
          position: absolute

          .playback-button
            @extends $reset-button
            background-color: transparent
            border: solid 2px $medium-blue
            border-radius: 4px
            color: $medium-blue
            font-size: 0.8em
            letter-spacing: 0.1em
            margin-right: 0.5em
            padding: 0.075em 0.25em
            width: 30px

          .playback-controls-label
            color: rgba(146, 175, 205, 0.3)
            font-style: italic
            font-size: 0.8em

        .assistive-buttons
          bottom: -1.5em
          position: absolute
          right: 0.5em

          .tutorial-button
            @extends $reset-button
            color: $medium-blue

    .task-container
      background-color: white
      border-radius: 0 6px 6px 0
      flex: 0 1 33%
      max-width: 350px
      padding: 1em

      .loading-indicator-icon
        color: black

.batman-placeholder
  display: block
  height: 100px
  margin: 0 auto
  width: 100px

.field-guide
  font-size: 13px
  height: 180px
  line-height: 1.5em
