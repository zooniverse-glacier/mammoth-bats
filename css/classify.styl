.classify-page
  background: url(./assets/classify-background.jpg)
  padding: 10em 3vw

  .classification
    display: flex
    justify-content: center
    flex-wrap: wrap
    margin: 0 auto
    max-width: 1200px

    .subject
      background-color: black
      border-bottom-left-radius: 6px
      border-top-left-radius: 6px
      display: inline-flex
      flex: 0 1 66%
      justify-content: center
      max-width: 800px

      .video-container
        display: inline-flex
        flex-direction: column
        justify-content: center
        position: relative
        width: 100%
        
        video
          background-color: black
          
        .playback-rate-controls
          bottom: -2em
          position: absolute
          
          .playback-button
            @extends $reset-button
            background-color: transparent
            border: solid 2px #92a2b3
            border-radius: 4px
            color: #92a2b3
            font-size: 0.8em
            letter-spacing: 0.1em
            margin-right: 0.5em
            outline: none
            padding: 0.075em 0.25em
          
          .playback-controls-label
            color: rgba(146, 175, 205, 0.3)
            font-style: italic
            font-size: 0.8em
        
    .questions-container
      background-color: white
      border-bottom-right-radius: 6px
      border-top-right-radius: 6px
      display: inline-flex
      flex: 0 1 33%
      flex-direction: column
      justify-content: flex-start
      max-width: 350px
      padding: 1em
      
      .batman-placeholder
        height: 100px
        margin: 1em auto
        width: 100px

      .task-container
        border-radius: 6px
        height: 30em
        margin-bottom: 1em

        .task-question, .task-button
          @extends $reset-button
          outline: none
          padding: 1em
          text-align: left
          width: 100%

        .task-fade-enter, .task-fade-appear, .task-fade-leave.task-fade-leave-active
          height: 0
          opacity: 0
          transition: height 0.75s ease-in-out

        .task-fade-enter.task-fade-enter-active, .task-fade-appear.task-fade-appear-active
          height: 100%
          opacity: 1

        .task-fade-leave
          height: 100%
          opacity: 1
          transition: height 0.75s, opacity 0.75s ease-in-out

        .task
          align-items: center
          display: inline-flex
          flex-direction: column
          height: 100%
          justify-content: space-between
          
          .question
            font-weight: 700
            text-align: center
            
          fieldset
            border: none
            margin: 2em 0
            text-align: center
            
            .number-input
              background-color: transparent
              border: none
              font-size: 5.33em
              text-align: center
              vertical-align: middle
              width: 45%
              
            .minus-button, .plus-button
              @extends $reset-button
              background-color: #f8f8f8
              border: solid 2px darken(#f8f8f8, 20%)
              border-radius: 4px
              color: black
              font-size: 1.66em
              height: 40px
              outline: none
              vertical-align: middle
              width: 40px
            
          .task-button
            background-color: lightgrey
            border-radius: 6px
            margin: 0.5em
            padding: 1em
            text-align: center
            width: 95%

          .task-checkbox
            background-color: lightgrey
            border-radius: 6px
            display: block
            padding: 0.5em 1em
            margin: 0.5em

      .workflow-action
        .help-text
          color: rgba(0, 0, 0, 0.5)
          font-style: italic
          position: relative
          text-align: center
          
          &:after
            border-left: 5px solid transparent
            border-right: 5px solid transparent
            border-top: 5px solid rgba(0, 0, 0, 0.5)
            bottom: -0.5em
            content: ''
            left: 50%
            height: 0 
            position: absolute
            width: 0 
          
        .action-button
          @extends $reset-button
          background-color: #3a4959
          border-radius: 6px
          color: white
          font-size: 1em
          padding: 1em
          text-align: center
          text-transform: capitalize
          width: 22em
