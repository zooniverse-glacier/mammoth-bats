.classify-page
  height: 100%
  padding: 10em 1em

  @media screen and (max-width: 900px)
    padding: 10em 0

  .loading-indicator-container
    align-items: center
    display: flex
    justify-content: center
    height: 100%
    min-height: 581px

    .loading-indicator-icon
      color: white
      position: relative
      z-index: 1

  .classification
    align-items: stretch
    display: flex
    justify-content: center
    margin: 0 auto
    max-width: 1200px

    @media screen and (max-width: 900px)
      flex-wrap: wrap

    .subject
      background-color: black
      border-bottom-left-radius: 6px
      border-top-left-radius: 6px
      display: inline-flex
      flex: 1 1 auto
      max-width: 800px
      min-width: 320px
      width: 100%

      @media screen and (max-width: 900px)
        border-radius: 6px

      .video-container
        display: inline-flex
        flex-direction: column
        justify-content: center
        position: relative
        width: 100%

        video
          background-color: black
          border-bottom-left-radius: 6px
          border-top-left-radius: 6px
          min-height: 581px

          @media screen and (max-width: 900px)
            border-radius: 6px 6px 0 0
            min-height: 100%

        .playback-rate-controls
          bottom: -2em
          position: absolute

          @media screen and (max-width: 900px)
            bottom: 102.5%
            left: 0.5em

          .playback-button
            @extends $reset-button
            background-color: transparent
            border: solid 2px $medium-blue
            border-radius: 4px
            color: $medium-blue
            font-size: 0.8em
            letter-spacing: 0.1em
            margin-right: 0.5em
            padding: 0.075em 0.25em
            width: 30px

          .playback-controls-label
            color: rgba(146, 175, 205, 0.3)
            font-style: italic
            font-size: 0.8em

        .assistive-buttons
          bottom: -1.5em
          position: absolute
          right: 0.5em

          @media screen and (max-width: 900px)
            bottom: 102.5%

          .tutorial-button
            @extends $reset-button
            color: $medium-blue

    .task-container
      background-color: white
      border-radius: 0 6px 6px 0
      box-sizing: border-box
      flex: 1 1 auto
      max-width: 350px
      min-width: 320px
      padding: 1em
      width: 100%

      @media screen and (max-width: 900px)
        border-radius: 0 0 6px 6px
        max-width: 800px

      .loading-indicator-icon
        color: black

.batman-placeholder
  display: block
  height: 100px
  margin: 0 auto
  width: 100px

.field-guide
  font-size: 13px
  height: 180px
  line-height: 1.5em
